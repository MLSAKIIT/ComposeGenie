# Template Generator Service Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
TRUST_PROXY=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/template-generator-dev
DB_MAX_POOL_SIZE=10
DB_SERVER_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=template-generator:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=template-generator-service
JWT_AUDIENCE=template-generator-users

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=1048576
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5
LOG_TO_CONSOLE=true
LOG_COLORIZE=true

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_TIMEOUT=30000

# Template Configuration
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_TTL=3600
MAX_TEMPLATE_SIZE=102400
DEFAULT_TEMPLATE_CATEGORY=web-application

# API Configuration
API_PREFIX=/api
API_VERSION=v1
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs
API_DEFAULT_LIMIT=10
API_MAX_LIMIT=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring Configuration
METRICS_ENABLED=false
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_PATH=/health

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=Template Generator
EMAIL_FROM_ADDRESS=noreply@template-generator.com