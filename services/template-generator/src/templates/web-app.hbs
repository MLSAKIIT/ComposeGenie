version: '3.8'

services:
  web:
    image: {{webImage}}
    ports:
      - "{{webPort}}:{{webPort}}"
    environment:
      - NODE_ENV={{nodeEnv}}
    depends_on:
      - database

  database:
    image: {{dbImage}}
    environment:
      - POSTGRES_DB={{dbName}}
      - POSTGRES_USER={{dbUser}}
      - POSTGRES_PASSWORD={{dbPassword}}
    volumes:
      - db_data:/var/lib/postgresql/data

volumes:
  db_data: